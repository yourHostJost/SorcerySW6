# Production Environment Variables for Hetzner Cloud
# Copy this to .env on your Hetzner server

# Database Configuration
MYSQL_PASSWORD=your_secure_mysql_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Shopware Configuration
SHOPWARE_ENV=prod
APP_ENV=prod

# Domain Configuration (update with your domain or IP)
APP_URL=http://your-hetzner-ip-or-domain.com

# Security
APP_SECRET=your_app_secret_key_here

# Performance Settings
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
