<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Entity Definitions -->
        <service id="TcgManager\Core\Content\Card\CardDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="TcgManager\Core\Content\Collection\CollectionDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="TcgManager\Core\Content\Collection\CollectionCardDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="TcgManager\Core\Content\Deck\DeckDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="TcgManager\Core\Content\DeckCard\DeckCardDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <!-- Services -->
        <service id="TcgManager\Service\CollectionService">
            <argument type="service" id="tcg_collection.repository"/>
            <argument type="service" id="tcg_collection_card.repository"/>
            <argument type="service" id="tcg_card.repository"/>
        </service>

        <service id="TcgManager\Service\DeckService">
            <argument type="service" id="tcg_deck.repository"/>
            <argument type="service" id="tcg_deck_card.repository"/>
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="TcgManager\Service\CollectionService"/>
        </service>

        <service id="TcgManager\Service\CardService">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
        </service>

        <!-- Create alias for abstract service -->
        <service id="Shopware\Core\System\SalesChannel\Context\AbstractSalesChannelContextFactory"
                 alias="Shopware\Core\System\SalesChannel\Context\SalesChannelContextFactory" />

        <service id="TcgManager\Service\ShopIntegrationService">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\AbstractSalesChannelContextFactory"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService"/>
            <argument type="service" id="TcgManager\Service\CardService"/>
        </service>

        <!-- Storefront Controllers -->
        <service id="TcgManager\Storefront\Controller\CollectionController" public="true">
            <argument type="service" id="TcgManager\Service\CollectionService"/>
            <argument type="service" id="TcgManager\Service\CardService"/>
            <argument type="service" id="product.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <service id="TcgManager\Storefront\Controller\DeckController" public="true">
            <argument type="service" id="TcgManager\Service\DeckService"/>
            <argument type="service" id="TcgManager\Service\CollectionService"/>
            <argument type="service" id="TcgManager\Service\ShopIntegrationService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

        <!-- Admin API Controllers -->
        <service id="TcgManager\Administration\Controller\CardController" public="true">
            <argument type="service" id="TcgManager\Service\CardService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- API Import Services -->
        <service id="TcgManager\Service\SorceryApiImportService">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="Symfony\Contracts\HttpClient\HttpClientInterface"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Media Upload Service -->
        <service id="TcgManager\Service\MediaUploadService">
            <argument type="service" id="media.repository"/>
            <argument type="service" id="media_folder.repository"/>
            <argument type="service" id="product_media.repository"/>
            <argument type="service" id="Shopware\Core\Content\Media\MediaService"/>
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver"/>
            <argument type="service" id="logger"/>
            <argument>%kernel.project_dir%</argument>
        </service>

        <!-- Product Sync Service -->
        <service id="TcgManager\Service\ProductSyncService">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="TcgManager\Service\MediaUploadService"/>
            <argument type="service" id="logger"/>
            <argument>%kernel.project_dir%</argument>
        </service>

        <!-- Console Commands -->
        <service id="TcgManager\Command\ImportSorceryCardsCommand">
            <argument type="service" id="TcgManager\Service\SorceryApiImportService"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\TestCardsCommand">
            <argument type="service" id="tcg_card.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\SyncProductsCommand">
            <argument type="service" id="TcgManager\Service\ProductSyncService"/>
            <argument type="service" id="tcg_card.repository"/>
            <tag name="console.command"/>
        </service>



        <service id="TcgManager\Command\UploadMediaCommand">
            <argument type="service" id="TcgManager\Service\MediaUploadService"/>
            <argument type="service" id="tcg_card.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\TestImageMappingCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\TestMediaUrlsCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\GetCardIdCommand">
            <argument type="service" id="tcg_card.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\FixDuplicateCardsCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="TcgManager\Service\CardService"/>
            <argument type="service" id="TcgManager\Service\ProductSyncService"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\AnalyzeCardIdsCommand">
            <argument type="service" id="tcg_card.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\FixProductNumbersCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="TcgManager\Service\ProductSyncService"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\AnalyzeFoilsCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\AnalyzeMissingImagesCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\FixMissingImagesCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="TcgManager\Service\ProductSyncService"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\DebugCardMediaCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="media.repository"/>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\TestImageMappingCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\DebugImageUploadCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="TcgManager\Service\MediaUploadService"/>
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="TcgManager\Command\FindMismatchedNamesCommand">
            <argument type="service" id="tcg_card.repository"/>
            <argument>%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <!-- Data Fixtures -->
        <service id="TcgManager\DataFixtures\CardFixtures">
            <argument type="service" id="TcgManager\Service\CardService"/>
            <tag name="tcg_manager.fixture"/>
        </service>

        <!-- Storefront Controllers -->
        <service id="TcgManager\Storefront\Controller\ShopController">
            <argument type="service" id="tcg_card.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="TcgManager\Service\CardService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>

        <!-- Event Subscribers -->
        <service id="TcgManager\Subscriber\NavigationSubscriber">
            <argument type="service" id="router"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="TcgManager\Subscriber\CustomerRegistrationSubscriber">
            <argument type="service" id="TcgManager\Service\CollectionService"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
