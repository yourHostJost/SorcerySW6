{% sw_extends '@Storefront/storefront/page/account/index.html.twig' %}

{% block page_account_main_content %}
    <div class="account-content">
        <div class="account-content-header">
            <h1>{{ "tcg.deck_feed.title"|trans }}</h1>
            <p class="account-content-description">
                {{ "tcg.deck_feed.description"|trans }}
            </p>
        </div>

        <div class="account-content-main">
            {% if publicDecks|length > 0 %}
                <div class="deck-feed-grid">
                    {% for deck in publicDecks %}
                        <div class="deck-card">
                            <div class="deck-card-header">
                                <h3 class="deck-card-title">{{ deck.name }}</h3>
                                <span class="deck-card-format">{{ deck.format }}</span>
                            </div>
                            
                            <div class="deck-card-body">
                                {% if deck.description %}
                                    <p class="deck-card-description">{{ deck.description }}</p>
                                {% endif %}
                                
                                <div class="deck-card-stats">
                                    <div class="deck-stat">
                                        <span class="deck-stat-label">{{ "tcg.deck.cards"|trans }}:</span>
                                        <span class="deck-stat-value">
                                            {% if deck.deckCards %}
                                                {{ deck.deckCards|length }}
                                            {% else %}
                                                0
                                            {% endif %}
                                        </span>
                                    </div>
                                    
                                    <div class="deck-stat">
                                        <span class="deck-stat-label">{{ "tcg.deck.created"|trans }}:</span>
                                        <span class="deck-stat-value">{{ deck.createdAt|date('d.m.Y') }}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="deck-card-actions">
                                <a href="{{ path('frontend.account.tcg.deck.detail', {'deckId': deck.id}) }}" 
                                   class="btn btn-outline-primary btn-sm">
                                    {{ "tcg.deck.view"|trans }}
                                </a>
                                
                                <button type="button" 
                                        class="btn btn-primary btn-sm"
                                        onclick="copyDeck('{{ deck.id }}')">
                                    {{ "tcg.deck.copy"|trans }}
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <div class="deck-feed-pagination">
                    <button type="button" class="btn btn-outline-secondary" onclick="loadMoreDecks()">
                        {{ "tcg.deck_feed.load_more"|trans }}
                    </button>
                </div>
            {% else %}
                <div class="deck-feed-empty">
                    <div class="alert alert-info">
                        <h4>{{ "tcg.deck_feed.no_decks.title"|trans }}</h4>
                        <p>{{ "tcg.deck_feed.no_decks.description"|trans }}</p>
                        <a href="{{ path('frontend.account.tcg.decks') }}" class="btn btn-primary">
                            {{ "tcg.deck.create_first"|trans }}
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block page_account_sidebar_content %}
    {% sw_include '@TcgManager/storefront/page/account/sidebar.html.twig' %}
{% endblock %}

{% block base_body_script %}
    {{ parent() }}
    
    <script>
        function copyDeck(deckId) {
            fetch(`/api/tcg/decks/${deckId}/copy`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('{{ "tcg.deck.copy_success"|trans }}');
                    window.location.href = '/account/tcg/decks';
                } else {
                    alert('{{ "tcg.deck.copy_error"|trans }}: ' + (data.message || '{{ "tcg.general.unknown_error"|trans }}'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('{{ "tcg.deck.copy_error"|trans }}');
            });
        }
        
        function loadMoreDecks() {
            // TODO: Implement pagination
            alert('{{ "tcg.deck_feed.load_more_coming_soon"|trans }}');
        }
    </script>
    
    <style>
        .deck-feed-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .deck-card {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1.25rem;
            background: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            transition: box-shadow 0.15s ease-in-out;
        }
        
        .deck-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .deck-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }
        
        .deck-card-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
            color: #212529;
        }
        
        .deck-card-format {
            background: #e9ecef;
            color: #495057;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        .deck-card-description {
            color: #6c757d;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
        
        .deck-card-stats {
            margin-bottom: 1rem;
        }
        
        .deck-stat {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }
        
        .deck-stat-label {
            color: #6c757d;
            font-size: 0.875rem;
        }
        
        .deck-stat-value {
            font-weight: 500;
            font-size: 0.875rem;
        }
        
        .deck-card-actions {
            display: flex;
            gap: 0.5rem;
        }
        
        .deck-feed-pagination {
            text-align: center;
            margin-top: 2rem;
        }
        
        .deck-feed-empty {
            text-align: center;
            padding: 3rem 1rem;
        }
        
        @media (max-width: 768px) {
            .deck-feed-grid {
                grid-template-columns: 1fr;
            }
            
            .deck-card-header {
                flex-direction: column;
                gap: 0.5rem;
            }
            
            .deck-card-actions {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}
