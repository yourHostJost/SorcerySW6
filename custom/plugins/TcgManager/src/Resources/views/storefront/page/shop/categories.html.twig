{% extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
<div class="tcg-shop-categories">
    <div class="container-fluid">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="text-center">
